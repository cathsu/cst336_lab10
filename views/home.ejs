<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h1> POPULAR QUOTES </h1>
		<form action='/quotes' method='GET'>
			<div class='form-group row'>
				<label for='keyword' class='col-sm-4 col-form-label'>Keyword</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='keyword' name='keyword' placeholder='Keyword'>
				</div>
			</div>
			<div class='form-group row'>
				<label for='category' class='col-sm-4 col-form-label'>Category</label>
				<div class='col-sm-4'>
					<select id="category" name="category">
						<option value=""></option>
						<%categories.forEach(function(category) {%>
							<option value="<%=category.category%>"><%=category.category%></option>
						<%});%> 
					</select>
				</div>
			</div>
			<div class='form-group row'>
				<label for='author' class='col-sm-4 col-form-label'>Author</label>
				<div class='col-sm-4'>
					<select id="author" name="author">
						<option value=""></option>
						<%authors.forEach(function(a) {%>
							<option value="<%=a.firstName + " " + a.lastName%>"><%=a.firstName + " " + a.lastName%></option>
						<%});%> 
					
					</select>
				</div>
			</div>
			<div class='form-group row'>
				<label for='gender' class='col-sm-4 col-form-label'>Gender</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='gender' name='gender' placeholder= 'Gender'>
				</div>
			</div>
			<div class='form-group row'>
				<div class='col-sm-4'></div>
				<div class='col-sm-4'>
					<button class='btn btn-primary btn-block'>Search Author</button>
				</div>
				<div class='col-sm-4'></div>
			</div>
		</form>
	</div>
</div>

<%- include ('templates/footer'); -%>